<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<Window size="360,60"><!--bktrans="true"-->
	<Font name="微软雅黑" size="12" bold="false" italic="false" />
	<Font name="微软雅黑" size="14" bold="false" italic="false" />

    <VerticalLayout bkcolor="#FF202020"><!--bkimage="bk_white_20.png"  bkcolor="#FF333933"-->
		<Control height="4"/>
		<HorizontalLayout height="15">
			<Label name="lbl_left_time" text="00:00:00" width="60" padding="4,0,0,0" textcolor="#FFFFFFFF" font="0" align="left+vcenter"/>
			<Slider name="slider_play" padding="0,1,0,2" height="12" bkimage="bar\pro_bk.png" foreimage="bar\pro_fore.png" min="0" max="100" value="0" hor="true" thumbsize="12,12" isstretchfore="false" />
			<Label name="lbl_right_time" text="00:00:00" width="60" padding="4,0,0,0" textcolor="#FFFFFFFF" font="0" align="right+vcenter"/>
		</HorizontalLayout>
		<Control height="4"/>
		<HorizontalLayout height="33">
			<Control />
			<Button name="btn_play" width="55" normalimage="file='bar\btn_play.png' source='0,0,55,33'" hotimage="file='bar\btn_play.png' source='0,33,55,66'" pushedimage="file='bar\btn_play.png' source='0,66,55,99'" showhand="true"/>
			<Button name="btn_pause" width="55" normalimage="file='bar\btn_pause.png' source='0,0,55,33'" hotimage="file='bar\btn_pause.png' source='0,33,55,66'" pushedimage="file='bar\btn_pause.png' source='0,66,55,99'" showhand="true" visible="false"/>
			<Control />
		</HorizontalLayout>
		<Control />
		<Label name="lbl_state" float="true" pos="4,40,0,0" width="160" height="15" font="0" textcolor="#FFFFFFFF" endellipsis="true"/>
		<HorizontalLayout name="volume" float="true" pos="0,0,0,0" width="150" height="24">
			<Button name="btn_volume" width="24" bkimage="bar\volume.png" showhand="true"/>
			<Slider name="slider_volume" padding="4,7,0,0" width="120" height="10" bkimage="bar\voice_bk.png" foreimage="bar\voice_fore.png" min="0" max="100" value="50" hor="true" thumbsize="10,10" thumbimage="bar\scroll_volume.png" isstretchfore="false" />
		</HorizontalLayout>
    </VerticalLayout>
</Window>
